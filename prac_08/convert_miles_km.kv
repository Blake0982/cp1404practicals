BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '0'
            font_size: 64
            multiline: False
            size_hint_x: 2
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                font_size: 40
                on_press: app.handle_calculate(input_number.text)
                on_press: app.handle_increment(input_number.text, 1)
            Button:
                text: 'Down'
                font_size: 40
                on_press: app.handle_calculate(input_number.text)
                on_press: app.handle_increment(input_number.text, -1)
    Button:
        text: 'Convert miles to km'
        font_size: 40
        on_press: app.handle_calculate(input_number.text)
    Label:
        id: output_label
        font_size: 64
        color: (1, 1, 0, 1)